<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_crm_ai_report_pivot" model="ir.ui.view">
        <field name="name">crm.ai.report.pivot</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <pivot string="AI Analysis Report">
                <field name="customer_segment" type="row"/>
                <field name="stage_id" type="row"/>
                <field name="deal_score" type="measure"/>
                <field name="expected_revenue" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="view_crm_ai_report_graph" model="ir.ui.view">
        <field name="name">crm.ai.report.graph</field>
        <field name="model">crm.lead</field>
        <field name="arch" type="xml">
            <graph string="AI Analysis Report">
                <field name="customer_segment"/>
                <field name="deal_score" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_crm_ai_report" model="ir.actions.act_window">
        <field name="name">AI Analysis Report</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[('type', '=', 'opportunity')]</field>
        <field name="context">{
            'search_default_customer_segment': 1,
            'search_default_stage_id': 1
        }</field>
    </record>

    <menuitem id="menu_crm_ai_report"
              name="AI Analysis Report"
              action="action_crm_ai_report"
              parent="crm.crm_menu_report"
              sequence="20"/>
</odoo> 